<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFD484"
    tools:context=".mars.HistoryPhotoOfMarsFragment">


    <TextView
        android:id="@+id/detail_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_details"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.chip.Chip
        android:id="@+id/go_to_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/go_to_photo"
        app:chipBackgroundColor="@android:color/holo_orange_light"
        tools:ignore="MissingConstraints"
        />
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/mars_motion"
        android:layout_marginTop="200dp"
        android:layout_height="400dp"
        android:layout_width="match_parent"
        app:layout_anchorGravity="center"
        app:layoutDescription="@xml/fragment_history_photo_of_mars_scene"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_margin="20dp"
            app:layout_anchor="@+id/detail_textView"
            tools:src="@tools:sample/avatars" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>